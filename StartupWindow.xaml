<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="AutoOS.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dev="using:DevWinUI"
        xmlns:local="using:AutoOS"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TitleBar x:Name="AppTitleBar"
                  Title="AutoOS Startup"
                  IconSource="{dev:BitmapIconSource Source=ms-appx:///Assets/AppIcon.png}"
                  IsBackButtonVisible="False"
                  IsPaneToggleButtonVisible="False"
                  Subtitle="{x:Bind dev:ProcessInfoHelper.Version}">
        </TitleBar>
        <StackPanel Grid.Row="1" Margin="15,0,15,0">
            <TextBlock x:Name="StatusText" 
                       FontSize="14" 
                       FontWeight="Medium" 
                       Margin="0,10,0,0"/>
            <ProgressBar x:Name="ProgressBar" 
                         Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>