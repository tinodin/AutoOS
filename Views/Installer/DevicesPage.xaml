<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AutoOS.Views.Installer.DevicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:AutoOS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:AutoOS.Views"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="36,24,36,0"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Bluetooth &amp; Devices" />
        <ScrollViewer
            Grid.Row="1"
            Margin="{ThemeResource ContentPageMargin}"
            Padding="{ThemeResource ContentPagePadding}"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">
            <StackPanel dev:PanelAttach.ChildrenTransitions="Default" Spacing="8">
                <dev:SettingsGroup
                    x:Name="Bluetooth_SettingsGroup"
                    Margin="0,0,0,10"
                    Description="Toggle services and drivers required for Bluetooth functionality."
                    Header="Bluetooth"
                    HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Bluetooth.png}">
                    <dev:SettingsGroup.Content>
                        <ToggleSwitch x:Name="Bluetooth" Toggled="Bluetooth_Toggled" />
                    </dev:SettingsGroup.Content>
                </dev:SettingsGroup>
                <dev:SettingsGroup
                    Margin="0,0,0,10"
                    Description="Manage detection and interrupt moderation of devices."
                    Header="Devices"
                    HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Devices.png}">
                    <dev:SettingsGroup.Items>
                        <dev:SettingsCard Description="Disabling HID devices breaks the detection of devices in control software." Header="Human Interface Devices (HID)">
                            <ToggleSwitch x:Name="HID" Toggled="HID_Toggled" />
                        </dev:SettingsCard>
                        <dev:SettingsCard Description="Disabling IMOD fixes data loss when creating too many interrupts. Recommended to disable on higher polling rate mice/keyboards." Header="XHCI Interrupt Moderation (IMOD)">
                            <ToggleSwitch x:Name="IMOD" Toggled="IMOD_Toggled" />
                        </dev:SettingsCard>
                    </dev:SettingsGroup.Items>
                </dev:SettingsGroup>
                <Border Height="25" Background="Transparent" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
