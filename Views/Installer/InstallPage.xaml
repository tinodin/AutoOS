<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AutoOS.Views.Installer.InstallPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:AutoOS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:AutoOS.Views"
    mc:Ignorable="d">
    <ScrollView
        Margin="{ThemeResource ContentPageMargin}"
        Padding="{ThemeResource ContentPagePadding}"
        HorizontalAlignment="Stretch"
        VerticalScrollBarVisibility="Auto">
        <StackPanel
            Margin="10"
            dev:PanelAttach.ChildrenTransitions="Default"
            Spacing="5">
            <TextBlock
                Margin="7,-11,0,57"
                FontSize="28"
                FontWeight="SemiBold"
                Text="Installing AutoOS..." />
            <TextBlock
                x:Name="StatusText"
                Margin="0,100,0,12"
                FontSize="20"
                FontWeight="Medium" />
            <ProgressBar x:Name="ProgressBar" Foreground="{ThemeResource AccentForegroundBrush}" />
            <InfoBar
                x:Name="InfoBar"
                Margin="0,10,0,0"
                IsClosable="False"
                IsOpen="True">
                <InfoBar.Content>
                    <StackPanel Orientation="Vertical">
                        <ProgressRing
                            x:Name="ProgressRingItem"
                            Width="25"
                            Height="25"
                            Margin="0,-50,10,0"
                            HorizontalAlignment="Right"
                            Background="LightGray"
                            Foreground="{ThemeResource AccentForegroundBrush}"
                            IsIndeterminate="True" />
                        <Button
                            x:Name="ResumeButtonItem"
                            Margin="0,-50,10,0"
                            HorizontalAlignment="Right"
                            Content="Resume"
                            Visibility="Collapsed" />
                    </StackPanel>
                </InfoBar.Content>
            </InfoBar>
            <Border Height="25" Background="Transparent" />
        </StackPanel>
    </ScrollView>
</Page>
