<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Installer.GraphicsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Graphics Card"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Header="Brands"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Content>
                    <GridView x:Name="Brands"
                              SelectionMode="Single"
                              SelectionChanged="Brand_Changed">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="10">
                                    <Image Source="{Binding ImageSource}"
                                           Width="40"
                                           Height="40"
                                           Margin="0,5,0,10"
                                           HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Text}"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal"
                                          ItemWidth="180"
                                          ItemHeight="150"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                </dev:SettingsGroup.Content>
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard Description="Disabling HDCP breaks Netflix and other protected video streaming services."
                                      Header="High-Bandwidth Digital Content Protection (HDCP)">
                        <ToggleSwitch x:Name="HDCP"
                                      Toggled="HDCP_Toggled"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <dev:SettingsGroup Description="Import your MSI Afterburner profile here."
                               Header="MSI Afterburner"
                               HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/MsiAfterburner.png}"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Content>
                    <Button Content="Import profile"
                            Click="BrowseMsi_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Left"/>
                </dev:SettingsGroup.Content>
            </dev:SettingsGroup>
            <StackPanel x:Name="MsiAfterburnerInfo"/>
            <Border Height="25"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
