<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.LoggingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Hidden">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Tracking &amp; Logging"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Description="Disabling Event Trace Sessions breaks logging apps e.g. Event Viewer and xperf."
                               Header="Event Trace Sessions (ETS)"
                               HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/EventTraceSessions.png}">
                <dev:SettingsGroup.Content>
                    <ToggleSwitch x:Name="ETS"
                                  Toggled="ETS_Toggled"/>
                </dev:SettingsGroup.Content>
            </dev:SettingsGroup>
            <StackPanel x:Name="EventTraceSessionsInfo"/>
        </StackPanel>
    </ScrollView>
</Page>
