<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.GamesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Games"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup x:Name="fortniteVersion"
                                   Header="Installed Games"
                                   HorizontalContentAlignment="Left">
                <StackPanel Orientation="Vertical">
                    <Border CornerRadius="5" Width="187" Height="250" HorizontalAlignment="Center">
                        <Border.Background>
                            <ImageBrush ImageSource="ms-appx:///Assets/Fluent/Fortnite3.jpeg" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                    <dev:ElementGroup Margin="0,25,0,0" HorizontalAlignment="Center">
                        <Button HorizontalAlignment="Stretch"
                                Content="Launch"
                                Style="{StaticResource AccentButtonStyle}"
                                x:Name="launchFortnite"
                                Click="LaunchFortnite_Click"/>
                        <Button HorizontalAlignment="Stretch"
                                Content="Stop processes"
                                x:Name="stopProcesses"
                                Click="StopProcesses_Click"
                                Visibility="Collapsed"/>
                        <Button HorizontalAlignment="Stretch"
                                Visibility="Collapsed"
                                Content="Start explorer"
                                x:Name="launchExplorer"
                                Click="LaunchExplorer_Click"/>
                        <Button HorizontalAlignment="Stretch"
                                Click="FortniteOptions_Click">
                            <FontIcon Glyph="&#xE713;" FontSize="19"/>
                        </Button>
                    </dev:ElementGroup>
                </StackPanel>
            </dev:SettingsGroup>
            <StackPanel/>
            <dev:SettingsGroup Description="Select your Epic Games Account."
                               Header="Epic Games Account" HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Epicgames.png}">
                <dev:SettingsGroup.Content>
                    <ComboBox x:Name="Accounts"
                              SelectionChanged="Accounts_SelectionChanged"/>
                </dev:SettingsGroup.Content>
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard Header="Add a new Account">
                        <Button Content="Add"
                                Click="AddAccount_Click"/>
                    </dev:SettingsCard>
                    <dev:SettingsCard Header="Remove Account">
                        <Button Content="Remove"
                                Click="RemoveAccount_Click"
                                x:Name="removeButton"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <Image Source="Assets/Fluent/Fortnite.png" Width="40" Height="40"/>
            <StackPanel x:Name="AccountInfo"/>
            <Border Height="60"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
