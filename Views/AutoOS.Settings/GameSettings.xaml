<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.GameSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <dev:SettingsCard Header="Presentation Mode" 
                          Description="Hardware: Independent Flip is the newest presentation mode which performs almost identically to Hardware: Legacy Flip but without any delay or black screens when tabbing out.">
            <ComboBox x:Name="PresentationMode"
                                  SelectionChanged="PresentationMode_SelectionChanged">
                <ComboBoxItem Content="Hardware: Independent Flip" />
                <ComboBoxItem Content="Hardware: Legacy Flip" />
            </ComboBox>
        </dev:SettingsCard>
    </StackPanel>

</Page>