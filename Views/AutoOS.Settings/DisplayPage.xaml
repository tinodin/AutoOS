<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.DisplayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Display"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Description="Add custom resolutions, remove unwanted resolutions, edit FreeSync ranges, and more."
                               Header="Custom Resolution Utility (CRU)"
                               HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/CRU.png}">
                <dev:SettingsGroup.Content>
                    <Button Content="Import profile"
                            Click="BrowseCru_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Left"/>
                </dev:SettingsGroup.Content>
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard Header="Create a custom resolution"
                                      IsClickEnabled="False">
                        <Button Content="Launch"
                                Click="LaunchCru_Click"/>
                    </dev:SettingsCard>
                    <dev:SettingsCard Header="Reset all custom resolutions"
                                      IsClickEnabled="False">
                        <Button Content="Reset"
                                Click="ResetCru_Click"/>
                    </dev:SettingsCard>
                    <dev:SettingsCard Header="Restart the graphics driver"
                                      IsClickEnabled="False">
                        <Button Content="Restart"
                                Click="RestartCru_Click"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <StackPanel x:Name="CruInfo"/>
            <Border Height="60"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
