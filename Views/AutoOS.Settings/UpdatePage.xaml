<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.UpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Hidden">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Windows Update"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Description="Enabling Windows Updates is not recommended as it tends to be buggy (24H2) and rarely adds major features or security patches."
                               Header="Windows Updates"
                               HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Update2.png}">
                <dev:SettingsGroup.Content>
                    <ToggleSwitch x:Name="WindowsUpdate"
                                  Toggled="Update_Toggled"/>
                </dev:SettingsGroup.Content>
                <dev:SettingsGroup.Items>
                    
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <StackPanel x:Name="WindowsUpdateInfo"/>
        </StackPanel>
    </ScrollView>
</Page>
