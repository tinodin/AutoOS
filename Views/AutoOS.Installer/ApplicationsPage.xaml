<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Installer.ApplicationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Applications"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Header="Music"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Content>
                    <GridView x:Name="Music"
                              SelectionMode="Single"
                              SelectionChanged="Music_Changed">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="10">
                                    <Image Source="{Binding ImageSource}"
                                           Width="40"
                                           Height="40"
                                           Margin="0,5,0,10"
                                           HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Text}"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal"
                                          ItemWidth="180"
                                          ItemHeight="150"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                </dev:SettingsGroup.Content>
            </dev:SettingsGroup>
            <dev:SettingsGroup Header="Messaging"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Content>
                    <GridView x:Name="Messaging"
                              SelectionMode="Multiple"
                              IsMultiSelectCheckBoxEnabled="False"
                              SelectionChanged="Messaging_Changed">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="10">
                                    <Image Source="{Binding ImageSource}"
                                           Width="40"
                                           Height="40"
                                           Margin="0,5,0,10"
                                           HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Text}"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal"
                                          ItemWidth="180"
                                          ItemHeight="150"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                </dev:SettingsGroup.Content>
            </dev:SettingsGroup>
            <dev:SettingsGroup Header="Launchers"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Content>
                    <GridView x:Name="Launchers"
                              SelectionMode="Multiple"
                              IsMultiSelectCheckBoxEnabled="False"
                              SelectionChanged="Launchers_Changed">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="10">
                                    <Image Source="{Binding ImageSource}"
                                           Width="40"
                                           Height="40"
                                           Margin="0,5,0,10"
                                           HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Text}"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal"
                                          ItemWidth="180"
                                          ItemHeight="150"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                </dev:SettingsGroup.Content>
            </dev:SettingsGroup>
            <Border Height="25"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
