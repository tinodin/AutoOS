<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Installer.SchedulingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Per-CPU Scheduling"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Description="Benchmark your GPU and XHCI Controller Affinities or set them manually. If your CPU has 6 cores or more they will be reserved."
                               Header="Per-CPU Scheduling"
                               HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Cpu.png}"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Content>
                    <ComboBox x:Name="Affinities"
                              SelectionChanged="Affinities_Changed">
                        <ComboBoxItem Content="Automatic"></ComboBoxItem>
                        <ComboBoxItem Content="Manual"></ComboBoxItem>
                    </ComboBox>
                </dev:SettingsGroup.Content>
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard Header="GPU Affinity" x:Name="GpuSettings">
                        <ComboBox x:Name="GPU"
                                  SelectionChanged="Gpu_Changed"/>
                    </dev:SettingsCard>
                    <dev:SettingsCard Header="XHCI Controller Affinity" x:Name="XhciSettings">
                        <ComboBox x:Name="XHCI"
                                  SelectionChanged="Xhci_Changed"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <Border Height="60"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
