<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Installer.PersonalizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Personalization"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Header="Theme"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Content>
                    <GridView x:Name="Themes"
                              SelectionChanged="Theme_Changed"
                              SelectionMode="Single">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Image Stretch="UniformToFill"
                                       Source="{Binding ImageSource}"
                                       Width="190"
                                       Height="130"/>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </dev:SettingsGroup.Content>
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard Header="Legacy Context Menu" 
                                      HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, Glyph=&#xEDE3;}">
                        <ToggleSwitch x:Name="ContextMenu"
                                      Toggled="ContextMenu_Toggled"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <dev:SettingsGroup Header="Taskbar"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard x:Name="TaskbarIcon"
                                      Header="Taskbar alignment">
                        <ComboBox x:Name="TaskbarAlignment"
                                  SelectionChanged="TaskbarAlignment_SelectionChanged">
                            <ComboBoxItem Content="Left"/>
                            <ComboBoxItem Content="Center"/>
                        </ComboBox>
                    </dev:SettingsCard>
                    <dev:SettingsCard ContentAlignment="Left">
                        <CheckBox Content="Show my taskbar on all displays" 
                                  x:Name="ShowMyTaskbarOnAllDisplays"
                                  Click="ShowMyTaskbarOnAllDisplays_Click"
                                  Margin="0,0,0,15"
                                  Padding="22,5,0,0"/>
                    </dev:SettingsCard>
                    <dev:SettingsCard ContentAlignment="Left">
                        <CheckBox Content="Always show all tray icons in the notification area" 
                                  x:Name="TrayIcons"
                                  Click="TrayIcons_Click"
                                  Margin="0,0,0,15"
                                  Padding="22,5,0,0"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <dev:SettingsGroup Header="StartAllBack" 
                               HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/StartAllBack.png}"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Content>
                    <ComboBox x:Name="StartAllBack" 
                              SelectionChanged="StartAllBack_Changed">
                        <ComboBoxItem Content="Always"/>
                        <ComboBoxItem Content="Toggle with services"/>
                        <ComboBoxItem Content="Never"/>
                    </ComboBox>
                </dev:SettingsGroup.Content>
            </dev:SettingsGroup>
            <Border Height="25"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
