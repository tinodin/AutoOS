<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Installer.PowerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Energy &amp; Power"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Description="Manage idle states, power management and more."
                               Header="Power Options"
                               HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Energy.png}"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard x:Name="Idle_SettingsCard"
                                      Header="Idle States"
                                      Description="Disabling leads to a lower latency at the expense of higher temperatures and power consumption. Do not disable if you have hyperthreading enabled.">
                        <ToggleSwitch x:Name="IdleStates"
                                      Toggled="IdleStates_Toggled"/>
                    </dev:SettingsCard>
                    <dev:SettingsCard Header="Power Service"
                                      Description="Forces the use of BIOS power management instead of Windows. Only disable if you have a fully modded BIOS with cfglock/oclock enabled.">
                        <ToggleSwitch x:Name="PowerService"
                                      Toggled="PowerService_Toggled"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <Border Height="60"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
