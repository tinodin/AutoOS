<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Installer.TimerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Timer Resolution"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Description="Let AutoOS benchmark your Clock Interrupt Frequency (Timer Resolution) or set it manually."
                               Header="Clock Interrupt Frequency (Timer Resolution)"
                               HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Timer.png}"
                               Margin="0,0,0,10">
                <dev:SettingsGroup.Content>
                    <ComboBox x:Name="TimerResolution" SelectionChanged="TimerResolution_Changed">
                        <ComboBoxItem Content="Automatic"/>
                        <ComboBoxItem Content="Manual"/>
                    </ComboBox>
                </dev:SettingsGroup.Content>
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard Header="Timer Resolution" 
                                         x:Name="ResolutionSettings">
                        <ComboBox x:Name="Resolution"
                                  SelectionChanged="Resolution_Changed"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <Border Height="25"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
