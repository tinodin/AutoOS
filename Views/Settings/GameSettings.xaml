<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.GameSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollViewer Margin="10,0,-25,0"
                  Padding="{ThemeResource ContentPagePadding}">
        <StackPanel dev:PanelAttach.ChildrenTransitions="SettingsCardTransition">
            <dev:SettingsCard Header="Install Location" 
                          Description="{x:Bind InstallLocationDescription, Mode=OneWay}"
                          HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, Glyph=&#xE8B7;}"
                          Margin="0,10,0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBox IsReadOnly="True"
                                 IsTabStop="False"
                                 IsHitTestVisible="False"
                                 PlaceholderText="{x:Bind InstallLocation}"
                                 Width="300" />
                        <Button Margin="10,0,0,0"
                                Visibility="Collapsed">
                            <FontIcon Glyph="&#xE838;" />
                        </Button>
                    </StackPanel>
                </dev:SettingsCard>
                <dev:SettingsCard Header="Presentation Mode" 
                                  Description="Use Hardware: Independent Flip if you have issues when tabbing out."
                                  HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, Glyph=&#xE7F4;}"
                                  Visibility="{x:Bind IsFortnite, Mode=OneWay}"
                                  Margin="0,0,0,5">
                    <ComboBox x:Name="PresentationMode"
                              SelectionChanged="PresentationMode_SelectionChanged">
                        <ComboBoxItem Content="Hardware: Independent Flip" />
                        <ComboBoxItem Content="Hardware: Legacy Flip" />
                    </ComboBox>
                </dev:SettingsCard>
        </StackPanel>
    </ScrollViewer>
</Page>