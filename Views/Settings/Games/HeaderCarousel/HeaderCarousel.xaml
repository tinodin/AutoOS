<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:AutoOS.Views.Settings.Games.HeaderCarousel">

    <Style TargetType="local:HeaderCarousel">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel
                        Padding="64,0,64,0"
                        Orientation="Horizontal"
                        Spacing="-24" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:HeaderCarousel">
                    <Grid x:Name="RootGrid" CornerRadius="8,8,0,0">
                        <dev:OpacityMaskView VerticalAlignment="Top" OpacityMask="{ThemeResource OverlayRadialGradient}">
                            <dev:AnimatedImage
                                x:Name="PART_BackDropImage"
                                Height="400"
                                ImageUrl="ms-appx:///Assets/BackgroundBlur.png"
                                Stretch="{TemplateBinding ImageStretch}"
                                Visibility="Visible" />
                        </dev:OpacityMaskView>
                        <ScrollViewer
                            x:Name="PART_ScrollViewer"
                            Grid.Row="1"
                            Margin="0,24,0,0"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Disabled"
                            VerticalScrollMode="Disabled">
                            <ItemsPresenter x:Name="PART_ItemsPresenter" />
                        </ScrollViewer>
                        <StackPanel
                            Padding="24,12,24,24"
                            HorizontalAlignment="Center"
                            Orientation="Vertical"
                            Spacing="12">
                            <ContentPresenter Content="{TemplateBinding Header}" Visibility="{TemplateBinding HeaderVisibility}" />

                            <Grid RequestedTheme="Light">
                                <Grid
                                    Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
                                    CornerRadius="12"
                                    Opacity="0.6" />
                                <ContentPresenter Content="{TemplateBinding SecondaryHeader}" Visibility="{TemplateBinding SecondaryHeaderVisibility}" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
