<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.PowerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Energy &amp; Power"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Description="Toggle idle states and power management."
                   Header="Power Options" HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Energy.png}">
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard Header="Idle States" Description="Disabling leads to a lower latency at the expense of higher temperatures and power consumption. Do not disable if you have hyperthreading enabled." IsClickEnabled="False">
                        <ToggleSwitch x:Name="IdleStates" Toggled="IdleStates_Toggled"/>
                    </dev:SettingsCard>
                    <dev:SettingsCard Header="Power Service" Description="Forces the use of BIOS power management instead of Windows. Only disable if you have a fully modded BIOS with cfglock/oclock enabled." IsClickEnabled="False">
                        <ToggleSwitch x:Name="PowerService" Toggled="PowerService_Toggled"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <StackPanel x:Name="PowerInfo"/>
            <Border Height="95"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
