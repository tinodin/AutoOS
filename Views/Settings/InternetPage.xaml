<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.InternetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Network &amp; Internet"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <dev:SettingsGroup Description="Toggle services and drivers required for Wi-Fi functionality."
                               Header="Wi-Fi" HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Wifi.png}" x:Name="WiFi_SettingsGroup">
                <dev:SettingsGroup.Content>
                    <ToggleSwitch x:Name="WiFi" Toggled="WiFi_Toggled"/>
                </dev:SettingsGroup.Content>
            </dev:SettingsGroup>
            <StackPanel x:Name="WiFiInfo"/>
            <dev:SettingsGroup Description="Toggle Ethernet functionality."
                               Header="Ethernet" HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Ethernet.png}" x:Name="Ethernet_SettingsGroup">
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard Header="Wake-on-LAN (WOL)" Description="Toggle network adapter settings to manage Wake-on-LAN (WOL) functionality. Additional BIOS settings may be required." IsClickEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <ToggleSwitch x:Name="WOL" Toggled="WOL_Toggled"/>
                            <ProgressRing x:Name="wolProgress"
                                          IsActive="True" 
                                          Background="Transparent"
                                          Width="25"
                                          Height="25"
                                          Margin="10,0,0,0"/>
                        </StackPanel>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <StackPanel x:Name="EthernetInfo"/>
            <Border Height="95"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollView>
</Page>
