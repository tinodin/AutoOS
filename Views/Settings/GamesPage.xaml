<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.GamesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS.Views.Settings"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views.Settings.Games"
      mc:Ignorable="d">
    <ScrollViewer Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <TextBlock Text="Games"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="7,-11,0,57"/>
            <StackPanel x:Name="Games_StackPanel" Height="420">
                <dev:SwitchPresenter Grid.Row="1"
                                     HorizontalAlignment="Center"
                                     TargetType="x:Boolean"
                                     Value="True"
                                     x:Name="Games_SwitchPresenter">
                    <dev:Case Value="True">
                        <Grid VerticalAlignment="Center" 
                              HorizontalAlignment="Stretch" 
                              Height="350">
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical"
                                        Spacing="8">
                                <ProgressRing x:Name="Games_ProgressRing" IsActive="True" />
                                <TextBlock HorizontalAlignment="Center"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Text="Fetching data.." />
                            </StackPanel>
                        </Grid>
                    </dev:Case>
                    <dev:Case Value="False">
                        <views:GameGallery x:Name="games"
                                           Grid.Row="1">
                            <views:GameGallery.HeaderContent>
                                <StackPanel Orientation="Horizontal" Spacing="10"></StackPanel>
                            </views:GameGallery.HeaderContent>
                        </views:GameGallery>
                    </dev:Case>
                </dev:SwitchPresenter>
            </StackPanel>
            <StackPanel x:Name="GameInfo"/>
            <dev:SettingsGroup Description="Select your Epic Games Account."
                               Header="Epic Games Account"
                               HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Epicgames.png}">
                <dev:SettingsGroup.Content>
                    <ComboBox x:Name="Accounts"
                              SelectionChanged="Accounts_SelectionChanged"/>
                </dev:SettingsGroup.Content>
                <dev:SettingsGroup.Items>
                    <dev:SettingsCard Header="Add a new Account">
                        <Button Content="Add"
                                Click="AddAccount_Click"/>
                    </dev:SettingsCard>
                    <dev:SettingsCard Header="Remove Account">
                        <Button Content="Remove"
                                Click="RemoveAccount_Click"
                                x:Name="removeButton"/>
                    </dev:SettingsCard>
                </dev:SettingsGroup.Items>
            </dev:SettingsGroup>
            <StackPanel x:Name="AccountInfo"/>
            <Border Height="95"
                    Background="Transparent"/>
        </StackPanel>
    </ScrollViewer>
</Page>
